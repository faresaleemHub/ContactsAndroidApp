<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/person_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/person_img"
        app:layout_constraintStart_toEndOf="@id/person_img"
        android:textSize="24sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/person_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0+56065464"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/person_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/person_name_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>